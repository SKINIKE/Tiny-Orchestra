{
  "name": "tiny-orchestra",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "dev:web": "pnpm --filter @tiny-orchestra/desktop dev:web",
    "dev:tauri": "pnpm --filter @tiny-orchestra/desktop dev:tauri",
    "lint": "pnpm exec eslint . --ext .ts,.tsx,.mts,.cts,.js,.jsx --max-warnings 0",
    "format": "pnpm exec prettier --check .",
    "format:write": "pnpm exec prettier --write .",
    "typecheck": "pnpm run -r --if-present typecheck",
    "test": "pnpm run -r --if-present test",
    "e2e": "pnpm --filter @tiny-orchestra/e2e test",
    "build": "pnpm run -r --if-present build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "fast-check": "^3.18.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
